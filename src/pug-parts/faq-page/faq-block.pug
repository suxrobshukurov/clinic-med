.page-top-info
    .page-top-wrapper
        section.page-top.maxwidth-theme
            .page.title
                h3.index-block__title.title_700 Вопросы и ответы
            .navigation
                .breadcrumbs(itemscope itemtype="http://schema.org/BreadcrumbList")
                    .breadcrumbs__item(itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem")
                        a.breadcrumbs__link(href="/index.html" title="Главная" itemprop="item")
                            span.text--dark Главная
                            meta(itemprop="position" content="1")
                    span.breadcrumbs__separator —
                    span.breadcrumbs__item(itemprop="itemListElement" itemtype="http://schema.org/ListItem" itemscope)
                        span Вопросы и ответы
                        meta(itemprop="position" content="1")
.container
    .container-row
        .content.maxwidth-theme
            .company-sidebar
                aside.sidebar
                    ul.nav.nav-list.side-menu.bordered
                        li.list-item.sidebar-list-js
                            span.link-wrapper
                                a.text--dark(href="company.html") О клинике
                        li.list-item.sidebar-list-js.link-with-flag
                            span.link-wrapper
                                a.text--dark(href="faq.html") Вопросы и ответы
                        li.list-item.sidebar-list-js
                            span.link-wrapper
                                a.text--dark(href="company.html") Отзывы
                    .promo-block
                        a.promo-link(href="index.html")
                            img.promo-img(src="img/company/ads.jpg", alt="Вакцинация")
